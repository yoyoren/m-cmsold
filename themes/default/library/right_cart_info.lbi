	});
});
function delgoods2(rec_id){
	Ajax.call('flow.php?step=drop_goods', 'ajax=1&id='+rec_id , delResponse, 'GET', 'JSON');
}
function delResponse(result)
{
		document.getElementById('ECS_CARTINFO').innerHTML = result.content;
}
</script>
